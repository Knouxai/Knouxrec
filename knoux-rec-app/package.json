{
  "name": "knoux-rec",
  "version": "1.0.0",
  "description": "KNOUX REC - Professional Screen Recorder with AI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "author": "KNOUX Team",
  "license": "MIT",
  "dependencies": {
    "electron": "^27.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.knoux.rec",
    "productName": "KNOUX REC",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "package.json"
    ],
    "win": {
      "icon": "icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "icon.png",
      "target": "AppImage"
    },
    "mac": {
      "icon": "icon.icns",
      "target": "dmg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
